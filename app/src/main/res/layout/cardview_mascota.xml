<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="5dp">

    <LinearLayout
        android:id="@+id/LinearLayout_CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImageViewMascota"
            android:layout_width="match_parent"
            android:layout_height="160dp" />

        <LinearLayout
            android:id="@+id/LinearLayout_Descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ImageButton_HuesoBlanco"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/hueso_blanco"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/TextView_Nombre"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Perro"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/ImageView_HuesoAmarillo"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/hueso_amarillo"
                android:scaleType="centerInside"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>